<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#18B3B1B0"

    android:orientation="vertical">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="#F6000000" />

        <TextView
            android:id="@+id/txtFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:textColor="#F6000000" />


        <TextView
            android:id="@+id/txtLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:textColor="#F6000000" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:textColor="#F6000000" />

        <TextView
            android:id="@+id/txtAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:textColor="#F6000000" />

        <TextView
            android:id="@+id/txtPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:textColor="#F6000000" />

        <TextView
            android:id="@+id/txtStreetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:textColor="#F6000000" />

        <TextView
            android:id="@+id/txtHouseNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:textColor="#F6000000" />


        <TextView
            android:id="@+id/txtCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:textColor="#F6000000" />

        <TextView
            android:id="@+id/txtPostCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:textColor="#F6000000" />

        <TextView
            android:id="@+id/txtAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:textColor="#F6000000" />

        <TextView
            android:id="@+id/txtPayWithIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:textColor="#F6000000" />

        <TextView
            android:id="@+id/txtMonthyPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:textColor="#F6000000" />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:textColor="#F6000000" />

    </LinearLayout>


    <Button
        android:id="@+id/btnAccept"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginLeft="18dp"
        android:onClick="btnAcceptRequest"
        android:text="@string/btnAccept" />

    <Button
        android:id="@+id/btnReject"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginLeft="18dp"
        android:onClick="btnRejectRequest"
        android:text="@string/btnReject" />


</LinearLayout>


